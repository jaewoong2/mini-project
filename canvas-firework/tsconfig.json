{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es5",
      "module": "commonjs",
      "lib": [
        "dom",
        "esnext"
      ],
      "jsx": "react",
      "allowJs": true,
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}